{
  "stamina_limit": {
    "description": "体力上限设置",
    "type": "int",
    "hint": "设置体力上限值（25或50）",
    "default": 50,
    "options": [
      25,
      50
    ],
    "obvious_hint": true
  },
  "recovery_rate": {
    "description": "体力恢复速率（分钟/点）",
    "type": "int",
    "hint": "设置每点体力恢复所需的分钟数",
    "default": 30,
    "obvious_hint": false
  },
  "time_format": {
    "description": "时间显示格式",
    "type": "string",
    "hint": "设置结果显示的时间格式",
    "default": "HH:mm",
    "options": [
      "HH:mm",
      "h:mm A"
    ],
    "obvious_hint": false
  },
  "mention_user": {
    "description": "是否@用户",
    "type": "bool",
    "hint": "启用后将在结果中@发送指令的用户",
